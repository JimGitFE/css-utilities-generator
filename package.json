{
  "name": "css-utils",
  "version": "0.9.1",
  "description": "TypeScript utility package that simplifies working with CSS properties by providing shorthand notations for common CSS class names. Ideal for developers who want to streamline their CSS styling process, this package helps you translate short, intuitive class names into full CSS properties and values, ensuring your code is cleaner and more maintainable.",
  "main": "dist/generator.js",
  "types": "dist/generator.d.ts",
  "scripts": {
    "build": "tsc",
    "utils-watch-vars": "nodemon --watch $npm_config_watch --ext tsx,ts,js,jsx --exec ts-node generator.ts --myflag 23 --path ./src/app/styles/util23s.tsx",
    "utils-watch": "nodemon --watch src --ext tsx,ts,js,jsx --exec ts-node generator.ts",
    "generate-css": "nodemon --watch src --exec 'ts-node generator.ts' &"
  },
  "bin": {
    "gen-utils": "./generator.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JimGitFE/css-utils.git"
  },
  "keywords": [
    "css"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JimGitFE/css-utils/issues"
  },
  "homepage": "https://github.com/JimGitFE/css-utils#readme",
  "devDependencies": {
    "@babel/generator": "^7.24.5",
    "@babel/parser": "^7.24.5",
    "@babel/traverse": "^7.24.5",
    "@types/babel__generator": "^7.6.8",
    "@types/babel__traverse": "^7.20.5",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
 